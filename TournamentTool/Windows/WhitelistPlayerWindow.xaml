<Window x:Class="TournamentTool.Windows.WhitelistPlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TournamentTool.Windows"
        xmlns:components="clr-namespace:TournamentTool.Components.Buttons"
        xmlns:local2="clr-namespace:TournamentTool.Components"
        xmlns:viewmodels="clr-namespace:TournamentTool.ViewModels"
        xmlns:models="clr-namespace:TournamentTool.Models"
        d:DataContext="{d:DesignInstance Type=viewmodels:WhitelistPlayerWindowViewModel}"
        mc:Ignorable="d"
        Title="Player"
        Background="#2d2d2d"
        Height="299"
        Width="300"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Topmost="True"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None">
    <Border BorderThickness="1"
            BorderBrush="Black">
        <Grid>
            <Grid.Resources>
                <Style TargetType="{x:Type StackPanel}">
                    <Setter Property="Margin"
                            Value="0 10 0 0" />
                </Style>
            </Grid.Resources>

            <Grid.RowDefinitions>
                <RowDefinition Height="29" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"
                  Background="#000D14">
                <components:ButtonTaskbar Width="30"
                                          Height="30"
                                          FontSize="20"
                                          WindowChrome.IsHitTestVisibleInChrome="True"
                                          HorizontalAlignment="Right"
                                          ColorBrush="#ff000f"
                                          ContentText="X"
                                          Padding="1"
                                          Click="ExitButtonClick" />
            </Grid>

            <Grid Grid.Row="1">
                <TextBlock FontSize="18"
                           Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"
                           Margin="0 7 0 0"
                           TextAlignment="Center"
                           Width="300"
                           Height="30"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top">
                    <Run Foreground="DarkGray"
                         Text="Is Editing: " />
                    <Run Foreground="White"
                         Text="{Binding PlayerViewModel.Name, Mode=OneWay, Converter={StaticResource EmptyStringConverter}}" />
                </TextBlock>
                <TextBlock FontSize="18"
                           Visibility="{Binding IsEditing, Converter={StaticResource ReverseBoolToVisibilityConverter}}"
                           Margin="0 7 0 0"
                           TextAlignment="Center"
                           Width="300"
                           Height="30"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top">
                    <Run Foreground="DarkGray"
                         Text="Adding new player" />
                </TextBlock>

                <StackPanel Margin="0 30 15 0">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="-4 10 0 0">
                        <TextBlock Text="Name*: "
                                   Foreground="White"
                                   Height="18"
                                   FontSize="16"
                                   Padding="0"
                                   Margin="5 0 0 3" />
                        <TextBox TextWrapping="Wrap"
                                 Width="120"
                                 Height="20"
                                 Text="{Binding PlayerViewModel.Name, Mode=TwoWay}"
                                 Padding="0 2 0 0"
                                 Background="#9E9E9E" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="-3 10 0 0">
                        <TextBlock Text="   IGN*: "
                                   Foreground="White"
                                   Height="18"
                                   FontSize="16"
                                   Padding="0"
                                   Margin="5 0 0 3" />
                        <TextBox TextWrapping="Wrap"
                                 Width="120"
                                 Height="20"
                                 Text="{Binding PlayerViewModel.InGameName, Mode=TwoWay}"
                                 Padding="0 2 0 0"
                                 Background="#9E9E9E" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <TextBlock Text="      PB: "
                                   Foreground="White"
                                   Height="18"
                                   FontSize="16"
                                   Padding="0"
                                   Margin="5 0 0 3" />
                        <TextBox TextWrapping="Wrap"
                                 Width="120"
                                 Height="20"
                                 Text="{Binding PlayerViewModel.PersonalBest, Mode=TwoWay}"
                                 Padding="0 2 0 0"
                                 Background="#9E9E9E" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="-32 10 0 0">
                        <TextBlock Text="Team name: "
                                   Foreground="White"
                                   Height="18"
                                   FontSize="16"
                                   Padding="0"
                                   Margin="0 0 0 3" />
                        <TextBox TextWrapping="Wrap"
                                 Width="120"
                                 Height="20"
                                 Text="{Binding PlayerViewModel.TeamName, Mode=TwoWay}"
                                 Padding="0 2 0 0"
                                 Background="#9E9E9E" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="-35 10 0 0">
                        <TextBlock Text="Twitch Main: "
                                   Foreground="White"
                                   Height="18"
                                   FontSize="16"
                                   Padding="0"
                                   Margin="0 0 0 3" />
                        <TextBox TextWrapping="Wrap"
                                 Width="120"
                                 Height="20"
                                 Text="{Binding PlayerViewModel.StreamData.Main, Mode=TwoWay}"
                                 Padding="0 2 0 0"
                                 Background="#9E9E9E" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="-19 10 0 0">
                        <TextBlock Text="Twitch Alt: "
                                   Foreground="White"
                                   Height="18"
                                   FontSize="16"
                                   Padding="0"
                                   Margin="0 0 0 3" />
                        <TextBox TextWrapping="Wrap"
                                 Width="120"
                                 Height="20"
                                 Text="{Binding PlayerViewModel.StreamData.Alt, Mode=TwoWay}"
                                 Padding="0 2 0 0"
                                 Background="#9E9E9E" />
                    </StackPanel>
                </StackPanel>

                <components:ButtonNormal ContentText="Save"
                                         Width="150"
                                         Height="25"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Bottom"
                                         OnCommand="{Binding SaveCommand}"
                                         Margin="0 0 0 10" />
            </Grid>
        </Grid>
    </Border>
</Window>
