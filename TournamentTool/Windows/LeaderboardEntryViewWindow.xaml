<Window x:Class="TournamentTool.Windows.LeaderboardEntryViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TournamentTool.Windows"
        xmlns:models="clr-namespace:TournamentTool.Models"
        xmlns:components="clr-namespace:TournamentTool.Components.Buttons"
        xmlns:local2="clr-namespace:TournamentTool.Components"
        xmlns:viewmodels="clr-namespace:TournamentTool.ViewModels"
        xmlns:entityViewmodel="clr-namespace:TournamentTool.ViewModels.Entities"
        xmlns:rankingViewModels="clr-namespace:TournamentTool.ViewModels.Ranking"
        xmlns:controls="clr-namespace:WpfToolkit.Controls;assembly=VirtualizingWrapPanel"
        d:DataContext="{d:DesignInstance Type=rankingViewModels:LeaderboardEntryViewModel}"
        mc:Ignorable="d"
        d:DesignWidth="450"
        d:DesignHeight="400"
        Background="#1E1E1E"
        Title="Entry View"
        BorderThickness="0.75"
        BorderBrush="Black"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        Width="450"
        Height="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="29" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              Background="#000D14">
            <components:ButtonTaskbar Width="30"
                                      Height="30"
                                      FontSize="20"
                                      WindowChrome.IsHitTestVisibleInChrome="True"
                                      HorizontalAlignment="Right"
                                      ColorBrush="#ff000f"
                                      ContentText="X"
                                      Padding="1"
                                      Click="ExitButtonClick" />
        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0"
                        Orientation="Horizontal">
                <Image Source="{Binding Player.Image}"
                       Width="30"
                       Height="30"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Top"
                       Stretch="Uniform"
                       RenderOptions.BitmapScalingMode="NearestNeighbor"
                       SnapsToDevicePixels="True"
                       UseLayoutRounding="True"
                       Margin="10" />

                <StackPanel Orientation="Vertical"
                            Margin="5 4 0 0">
                    <TextBlock Text="{Binding Player.InGameName}"
                               FontWeight="Bold"
                               FontSize="17"
                               Foreground="Wheat"
                               Background="Transparent" />
                    <TextBlock Foreground="White">
                        <Run Text="Points: " />
                        <Run Text="{Binding Points}" />

                        <Run Text=" - " />

                        <Run Text="Best time: " />
                        <Run Text="{Binding BestTimeOnPrioritizeMilestone}" />

                        <Run Text=" - " />

                        <Run Text="Average time: " />
                        <Run Text="{Binding AverageTimeOnPrioritizeMilestone}" />
                    </TextBlock>
                </StackPanel>
            </StackPanel>

            <Border Grid.Row="1"
                    BorderBrush="Gray"
                    BorderThickness="0 1 0 0">
                <controls:VirtualizingItemsControl ItemsSource="{Binding Milestones}"
                                                   Background="Transparent"
                                                   VerticalAlignment="Top"
                                                   HorizontalAlignment="Left"
                                                   ScrollViewer.CanContentScroll="True"
                                                   ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                   ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                   VirtualizingStackPanel.IsVirtualizing="True"
                                                   VirtualizingStackPanel.VirtualizationMode="Recycling"
                                                   VirtualizingStackPanel.ScrollUnit="Pixel">
                    <controls:VirtualizingItemsControl.Resources>
                        <DataTemplate DataType="{x:Type rankingViewModels:EntryMilestoneRankedDataViewModel}">
                            <Border BorderBrush="Gray"
                                    BorderThickness="1"
                                    Width="425"
                                    Margin="2 2 2 4">
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Foreground="White">
                                        <Run Foreground="#d3d3d3">Time: </Run>
                                        <Run Text="{Binding MainMilestoneTime, Mode=OneTime}"
                                             Foreground="LightBlue" />

                                        <Run> | </Run>

                                        <Run Foreground="#d3d3d3">Main: </Run>
                                        <Run Text="{Binding MainMilestoneType, Mode=OneTime}" />
                                    </TextBlock>

                                    <TextBlock Visibility="{Binding IsPreviousEmpty, Converter={StaticResource ReverseBoolToVisibilityConverter}}"
                                               Foreground="White">
                                        <Run Foreground="#d3d3d3">Time: </Run>
                                        <Run Text="{Binding PreviousMilestoneTime, Mode=OneTime}"
                                             Foreground="LightBlue" />

                                        <Run> | </Run>

                                        <Run Foreground="#d3d3d3">Previous: </Run>
                                        <Run Text="{Binding PreviousMilestoneType, Mode=OneTime}" />
                                    </TextBlock>

                                    <TextBlock Foreground="White"
                                               Margin="0 0 0 2">
                                        <Run Foreground="#d3d3d3">Points: </Run>
                                        <Run Text="{Binding Points, Mode=OneTime}"
                                             FontWeight="SemiBold" />
                                        <Run Foreground="#d3d3d3"> in Round: </Run>
                                        <Run Text="{Binding Round, Mode=OneTime}"
                                             FontWeight="SemiBold" />
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type rankingViewModels:EntryMilestonePacemanDataViewModel}">
                            <Border BorderBrush="Gray"
                                    BorderThickness="1"
                                    Width="425"
                                    Margin="2 1 2 2">
                                <StackPanel Orientation="Vertical"
                                            Margin="2 0 0 0">
                                    <TextBlock Foreground="White">
                                        <Run Foreground="#d3d3d3">Time: </Run>
                                        <Run Text="{Binding MainMilestoneTime, Mode=OneTime}"
                                             Foreground="LightBlue" />

                                        <Run> | </Run>

                                        <Run Foreground="#d3d3d3">Main: </Run>
                                        <Run Text="{Binding MainMilestoneType, Mode=OneTime}" />
                                    </TextBlock>

                                    <TextBlock Visibility="{Binding IsPreviousEmpty, Converter={StaticResource ReverseBoolToVisibilityConverter}}"
                                               Foreground="White">
                                        <Run Foreground="#d3d3d3">Time: </Run>
                                        <Run Text="{Binding PreviousMilestoneTime, Mode=OneTime}"
                                             Foreground="LightBlue" />

                                        <Run> | </Run>

                                        <Run Foreground="#d3d3d3">Previous: </Run>
                                        <Run Text="{Binding PreviousMilestoneType, Mode=OneTime}" />
                                    </TextBlock>

                                    <TextBlock Foreground="White"
                                               Margin="0 0 0 2">
                                        <Run Foreground="#d3d3d3">Points: </Run>
                                        <Run Text="{Binding Points, Mode=OneTime}"
                                             FontWeight="SemiBold" />
                                        <Hyperlink Command="{Binding DataContext.OpenPacemanWorldIDCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                   CommandParameter="{Binding WorldID}">
                                            Check this run on paceman
                                        </Hyperlink>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </controls:VirtualizingItemsControl.Resources>
                    <controls:VirtualizingItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver"
                                         Value="True">
                                    <Setter Property="Cursor"
                                            Value="Hand" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </controls:VirtualizingItemsControl.ItemContainerStyle>
                </controls:VirtualizingItemsControl>
            </Border>
        </Grid>
    </Grid>
</Window>