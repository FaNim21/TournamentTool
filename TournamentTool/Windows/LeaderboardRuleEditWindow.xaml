<Window x:Class="TournamentTool.Windows.LeaderboardRuleEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:i="clr-namespace:Microsoft.Xaml.Behaviors;assembly=Microsoft.Xaml.Behaviors"
        xmlns:behaviors="clr-namespace:TournamentTool.Components.Behaviors"
        xmlns:vwp="clr-namespace:WpfToolkit.Controls;assembly=VirtualizingWrapPanel"
        xmlns:local="clr-namespace:TournamentTool.Windows"
        xmlns:models="clr-namespace:TournamentTool.Models"
        xmlns:RankingModels="clr-namespace:TournamentTool.Models.Ranking"
        xmlns:components="clr-namespace:TournamentTool.Components.Buttons"
        xmlns:local2="clr-namespace:TournamentTool.Components"
        xmlns:viewmodels="clr-namespace:TournamentTool.ViewModels"
        xmlns:converters="clr-namespace:TournamentTool.Converters"
        xmlns:rankingViewModels="clr-namespace:TournamentTool.ViewModels.Ranking"
        xmlns:entityViewModels="clr-namespace:TournamentTool.ViewModels.Entities"
        xmlns:enums="clr-namespace:TournamentTool.Enums"
        d:DataContext="{d:DesignInstance Type=rankingViewModels:LeaderboardRuleEditViewModel}"
        mc:Ignorable="d"
        d:DesignWidth="600"
        d:DesignHeight="450"
        Background="#1E1E1E"
        Title="Rule Edit"
        BorderThickness="0.75"
        BorderBrush="Black"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        Width="600"
        Height="450">
    <Window.Resources>
        <ContextMenu x:Key="SubRuleContextMenu">
            <MenuItem Header="Remove"
                      Command="{Binding DataContext.RemoveSubRuleCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                      CommandParameter="{Binding .}" />
        </ContextMenu>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="29" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              Background="#000D14">
            <components:ButtonTaskbar Width="30"
                                      Height="30"
                                      FontSize="20"
                                      WindowChrome.IsHitTestVisibleInChrome="True"
                                      HorizontalAlignment="Right"
                                      ColorBrush="#ff000f"
                                      ContentText="X"
                                      Padding="1"
                                      Click="ExitButtonClick" />
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <components:ButtonNormal HorizontalAlignment="Center"
                                             Width="100"
                                             ContentText="Settings"
                                             FontSize="20"
                                             OnCommand="{Binding OpenGeneralCommand}" />
                </Grid>

                <ListView Grid.Row="1"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          Background="#21272b"
                          BorderThickness="0"
                          SelectionMode="Single"
                          AllowDrop="True"
                          SelectedItem="{Binding SelectedSubRule}"
                          ItemsSource="{Binding Rule.SubRules}">
                    <i:Interaction.Behaviors>
                        <behaviors:ListBoxOrderDragAndDropBehavior MoveItemCommand="{Binding MoveSubRuleCommand}" />
                    </i:Interaction.Behaviors>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Background"
                                    Value="#404447" />
                            <Setter Property="Foreground"
                                    Value="#bcbcbc" />
                            <Setter Property="ContextMenu"
                                    Value="{StaticResource SubRuleContextMenu}" />
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Width="190"
                                  Height="20"
                                  HorizontalAlignment="Center">
                                <TextBlock Text="{Binding TimeText}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontSize="16"
                                           Margin="0 0 0 0" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <Grid Grid.Row="2"
                      Background="#000D14">

                    <components:ButtonPresets HorizontalAlignment="Left"
                                              ButtonText="+"
                                              OnConsoleCommand="{Binding AddSubRuleCommand}"
                                              Margin="5 0 0 0" />
                </Grid>
            </Grid>

            <Grid Grid.Column="1">
                <StackPanel Orientation="Vertical"
                            Visibility="{Binding IsGeneralVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                            Margin="10 10 0 0">

                    <ToggleButton IsChecked="{Binding Rule.IsEnabled}"
                                  IsEnabled="{Binding IsGeneralVisible}"
                                  Content="Is Enabled"
                                  Margin="0 0 0 5" />

                    <StackPanel Orientation="Horizontal"
                                Margin="0 0 0 5">
                        <TextBox TextWrapping="Wrap"
                                 Width="120"
                                 Height="20"
                                 Text="{Binding Rule.Name}"
                                 Padding="0 1 0 0"
                                 Background="#9E9E9E" />
                        <TextBlock Text="Name"
                                   Foreground="White"
                                   FontSize="16"
                                   Margin="5 0 0 3" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                Margin="0 3 0 5">
                        <ComboBox Width="150"
                                  ItemsSource="{Binding Rule.FilteredMilestones}"
                                  SelectedItem="{Binding Rule.ChosenMilestone, Mode=TwoWay}"
                                  Style="{StaticResource ComboBoxTest2}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={StaticResource EnumDisplayNameConverter}}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <TextBlock Foreground="White"
                                   FontSize="16"
                                   Margin="5 0 0 3">
                            <Run Text="Choose" />
                            <Run Text="{Binding Rule.RuleTypeText}" />
                        </TextBlock>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <components:ButtonNormal ContentText="Switch Rule Type"
                                                 Width="100"
                                                 Height="25"
                                                 HorizontalAlignment="Left"
                                                 Margin="0 3 0 5"
                                                 OnCommand="{Binding Rule.SwitchRuleTypeCommand}" />
                        <TextBlock Foreground="White"
                                   FontSize="14"
                                   Margin="5 5 0 0">
                            <Run Text="Type:" />
                            <Run Text="{Binding Rule.RuleTypeText}" />
                        </TextBlock>
                    </StackPanel>
                </StackPanel>

                <Grid Visibility="{Binding IsGeneralVisible, Converter={StaticResource ReverseBoolToVisibilityConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0"
                          Margin="10 2 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0"
                                    Orientation="Vertical">
                            <TextBlock Text="Config"
                                       Foreground="Wheat"
                                       FontSize="32"
                                       FontWeight="SemiBold"
                                       Margin="0 0 0 10" />

                            <!-- DESCRIPTION -->
                            <StackPanel Orientation="Horizontal"
                                        Margin="0 0 0 5">
                                <TextBox TextWrapping="NoWrap"
                                         Width="130"
                                         Height="20"
                                         Text="{Binding SelectedSubRule.Description}"
                                         Padding="0 1 0 0"
                                         Background="#9E9E9E" />
                                <TextBlock Text="Description"
                                           Foreground="White"
                                           FontSize="16"
                                           Margin="5 0 0 3" />
                            </StackPanel>

                            <!-- TIME -->
                            <StackPanel Orientation="Horizontal"
                                        Margin="0 0 0 5">
                                <TextBox TextWrapping="Wrap"
                                         Width="64"
                                         Height="20"
                                         Text="{Binding SelectedSubRule.Time, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="0 1 0 0"
                                         MaxLength="8"
                                         Background="#9E9E9E">
                                    <i:Interaction.Behaviors>
                                        <behaviors:NumericTextBoxBehavior AllowNegative="False" />
                                    </i:Interaction.Behaviors>
                                </TextBox>
                                <TextBlock Text="Time (ms)"
                                           ToolTipService.InitialShowDelay="0"
                                           ToolTipService.ShowDuration="60000"
                                           ToolTip="Time threshold for which a given sube rule can be achieved by players"
                                           Foreground="White"
                                           FontSize="16"
                                           Margin="5 0 0 3" />
                            </StackPanel>

                            <!-- BASE POINTS -->
                            <StackPanel Orientation="Horizontal"
                                        Margin="0 0 0 5">
                                <TextBox TextWrapping="Wrap"
                                         Width="50"
                                         Height="20"
                                         Text="{Binding SelectedSubRule.BasePoints}"
                                         Padding="0 1 0 0"
                                         MaxLength="6"
                                         Background="#9E9E9E">
                                    <i:Interaction.Behaviors>
                                        <behaviors:NumericTextBoxBehavior />
                                    </i:Interaction.Behaviors>
                                </TextBox>
                                <TextBlock Text="Base Points"
                                           Foreground="White"
                                           FontSize="16"
                                           Margin="5 0 0 3" />
                            </StackPanel>

                            <!-- MAX WINNERS (RANKED) -->
                            <StackPanel Orientation="Horizontal"
                                        Visibility="{Binding Rule.ControllerMode, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter={x:Static enums:ControllerMode.Ranked}}"
                                        Margin="0 0 0 5">
                                <TextBox TextWrapping="Wrap"
                                         Width="50"
                                         Height="20"
                                         Text="{Binding SelectedSubRule.MaxWinners}"
                                         Padding="0 1 0 0"
                                         MaxLength="6"
                                         Background="#9E9E9E">
                                    <i:Interaction.Behaviors>
                                        <behaviors:NumericTextBoxBehavior AllowNegative="False" />
                                    </i:Interaction.Behaviors>
                                </TextBox>
                                <TextBlock Text="Max Winners"
                                           Foreground="White"
                                           FontSize="16"
                                           Margin="5 0 0 3" />
                            </StackPanel>
                        </StackPanel>

                        <Border Grid.Column="1"
                                BorderBrush="#404447"
                                BorderThickness="2 0 0 0">
                            <StackPanel Orientation="Vertical">

                                <Grid VerticalAlignment="Center">
                                    <TextBlock Text="Scripts vars"
                                               Foreground="Wheat"
                                               FontSize="32"
                                               HorizontalAlignment="Left"
                                               FontWeight="SemiBold"
                                               TextAlignment="Center"
                                               Margin="10 0 0 10" />

                                    <components:ButtonNormal ContentText="↻"
                                                             FontSize="28"
                                                             Width="30"
                                                             Height="30"
                                                             Padding="0 0 0 0"
                                                             HorizontalAlignment="Right"
                                                             OnCommand="{Binding SelectedSubRule.ResetCustomVariablesToDefaultCommand}"
                                                             ToolTipService.InitialShowDelay="0"
                                                             ToolTipService.ShowDuration="60000"
                                                             ToolTip="Resets all custom variables to default"
                                                             ContentMargin="0 -7 0 0"
                                                             Margin="0 0 17 5" />
                                </Grid>

                                <!-- Trzeba ogarnac zwykle kontrolki czyli togglebutton, string field i number field -->
                                <vwp:VirtualizingItemsControl ItemsSource="{Binding SelectedSubRule.CustomVariables}"
                                                              ScrollViewer.CanContentScroll="True"
                                                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                              VirtualizingStackPanel.IsVirtualizing="True"
                                                              VirtualizingStackPanel.VirtualizationMode="Recycling"
                                                              VirtualizingStackPanel.ScrollUnit="Pixel"
                                                              Width="235"
                                                              Height="155"
                                                              Background="Transparent"
                                                              HorizontalAlignment="Left"
                                                              VerticalAlignment="Top"
                                                              Margin="5 0 0 0">
                                    <vwp:VirtualizingItemsControl.ItemTemplate>
                                        <DataTemplate DataType="{x:Type entityViewModels:LuaCustomVariableViewModel}">
                                            <ContentControl Content="{Binding}">
                                                <ContentControl.Style>
                                                    <Style TargetType="ContentControl">
                                                        <Setter Property="ContentTemplate">
                                                            <Setter.Value>
                                                                <!-- Default string -->
                                                                <DataTemplate>
                                                                    <StackPanel Orientation="Horizontal"
                                                                                Margin="0 0 0 0">
                                                                        <TextBox TextWrapping="NoWrap"
                                                                                 Width="100"
                                                                                 Height="20"
                                                                                 Text="{Binding Value}"
                                                                                 Padding="0 1 0 0"
                                                                                 Background="#9E9E9E" />
                                                                        <TextBlock Foreground="White"
                                                                                   FontSize="16"
                                                                                   Margin="5 0 0 2">
                                                                            <Run Text="{Binding Name, Mode=OneWay}" />
                                                                        </TextBlock>
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </Setter.Value>
                                                        </Setter>

                                                        <Style.Triggers>
                                                            <!-- Bool -->
                                                            <DataTrigger Binding="{Binding Type}"
                                                                         Value="bool">
                                                                <Setter Property="ContentTemplate">
                                                                    <Setter.Value>
                                                                        <DataTemplate>
                                                                            <ToggleButton IsChecked="{Binding ValueBool}"
                                                                                          Content="{Binding Name}"
                                                                                          FontSize="16" 
                                                                                          Margin="0 0 0 0"/>
                                                                        </DataTemplate>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </DataTrigger>

                                                            <!-- Numeric -->
                                                            <DataTrigger Binding="{Binding Type}"
                                                                         Value="number">
                                                                <Setter Property="ContentTemplate">
                                                                    <Setter.Value>
                                                                        <DataTemplate>
                                                                            <StackPanel Orientation="Horizontal"
                                                                                        Margin="0 0 0 0">
                                                                                <TextBox TextWrapping="NoWrap"
                                                                                         Width="60"
                                                                                         Height="20"
                                                                                         Text="{Binding ValueNumeric}"
                                                                                         Padding="0 1 0 0"
                                                                                         Background="#9E9E9E">
                                                                                    <i:Interaction.Behaviors>
                                                                                        <behaviors:NumericTextBoxBehavior AllowNegative="True"
                                                                                                                          AllowDecimal="True" />
                                                                                    </i:Interaction.Behaviors>
                                                                                </TextBox>
                                                                                <TextBlock Foreground="White"
                                                                                           FontSize="16"
                                                                                           Margin="5 0 0 2">
                                                                                    <Run Text="{Binding Name, Mode=OneWay}" />
                                                                                </TextBlock>
                                                                            </StackPanel>
                                                                        </DataTemplate>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </ContentControl.Style>
                                            </ContentControl>
                                        </DataTemplate>
                                    </vwp:VirtualizingItemsControl.ItemTemplate>
                                    <vwp:VirtualizingItemsControl.ItemContainerStyle>
                                        <Style TargetType="ContentPresenter">
                                            <Setter Property="Margin"
                                                    Value="0 2 0 2"/>
                                        </Style>
                                    </vwp:VirtualizingItemsControl.ItemContainerStyle>
                                </vwp:VirtualizingItemsControl>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <Border Grid.Row="1"
                            BorderBrush="#404447"
                            BorderThickness="0 2 0 0">
                        <StackPanel VerticalAlignment="Bottom"
                                    Background="Transparent"
                                    Height="200"
                                    Margin="10 0 0 0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Lua"
                                           Foreground="Wheat"
                                           FontSize="32"
                                           FontWeight="SemiBold"
                                           Margin="0 0 0 10" />

                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Center"
                                            Margin="30 -4 10 0">
                                    <TextBlock Text="Script: "
                                               VerticalAlignment="Center"
                                               Foreground="White"
                                               FontSize="16" />
                                    <ComboBox ItemsSource="{Binding LuaScripts}"
                                              SelectedItem="{Binding SelectedSubRule.SelectedScript, Delay=10, Mode=TwoWay}"
                                              DisplayMemberPath="Name"
                                              Width="280"
                                              Height="25"
                                              Style="{StaticResource ComboBoxTest2}" />
                                    <TextBlock Text="{Binding SelectedSubRule.SelectedScript.Version}"
                                               Foreground="White"
                                               TextWrapping="Wrap"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Background="Transparent"
                                               Margin="5" />
                                </StackPanel>
                            </StackPanel>

                            <Border BorderBrush="Black"
                                    Width="480"
                                    Height="135"
                                    HorizontalAlignment="Left"
                                    BorderThickness="1"
                                    Margin="0 0 0 0">
                                <TextBlock Text="{Binding SelectedSubRule.SelectedScript.Description}"
                                           Foreground="White"
                                           TextWrapping="Wrap"
                                           FontSize="12"
                                           Background="Transparent"
                                           Margin="5" />
                            </Border>

                        </StackPanel>
                    </Border>

                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>