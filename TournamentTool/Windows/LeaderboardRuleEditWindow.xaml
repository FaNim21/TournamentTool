<Window x:Class="TournamentTool.Windows.LeaderboardRuleEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TournamentTool.Windows"
        xmlns:models="clr-namespace:TournamentTool.Models"
        xmlns:components="clr-namespace:TournamentTool.Components.Buttons"
        xmlns:local2="clr-namespace:TournamentTool.Components"
        xmlns:viewmodels="clr-namespace:TournamentTool.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:LeaderboardRuleEditViewModel}"
        mc:Ignorable="d"
        d:DesignWidth="500"
        d:DesignHeight="350"
        Background="#1E1E1E"
        Title="Rule Edit"
        BorderThickness="0.75"
        BorderBrush="Black"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        Width="500"
        Height="350">
    <Window.Resources>
        <ContextMenu x:Key="SubRuleContextMenu">
            <MenuItem Header="Remove"
                      Command="{Binding DataContext.RemoveSubRuleCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                      CommandParameter="{Binding .}"/>
        </ContextMenu>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="29" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              Background="#000D14">
            <components:ButtonTaskbar Width="30"
                                      Height="30"
                                      FontSize="20"
                                      WindowChrome.IsHitTestVisibleInChrome="True"
                                      HorizontalAlignment="Right"
                                      ColorBrush="#ff000f"
                                      ContentText="X"
                                      Padding="1"
                                      Click="ExitButtonClick" />
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>


            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <components:ButtonNormal HorizontalAlignment="Center"
                                             Width="100"
                                             ContentText="General"
                                             FontSize="20"
                                             OnCommand="{Binding OpenGeneralCommand}" />
                </Grid>

                <ListView Grid.Row="1"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          Background="#21272b"
                          BorderThickness="0"
                          SelectionMode="Single"
                          AllowDrop="True"
                          SelectedItem="{Binding SelectedSubRule}"
                          ItemsSource="{Binding Rule.SubRules}">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Background"
                                    Value="#404447" />
                            <Setter Property="Foreground"
                                    Value="#bcbcbc" />
                            <Setter Property="ContextMenu"
                                    Value="{StaticResource SubRuleContextMenu}"/>
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Width="190"
                                  Height="20"
                                  HorizontalAlignment="Center">
                                <TextBlock Text="{Binding Time}"
                                           HorizontalAlignment="Center"
                                           Margin="0 -2 0 0" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <Grid Grid.Row="2"
                      Background="#000D14">

                    <components:ButtonPresets HorizontalAlignment="Left"
                                              ButtonText="+"
                                              OnConsoleCommand="{Binding AddSubRuleCommand}"
                                              Margin="5 0 0 0" />
                </Grid>
            </Grid>
            
            <Grid Grid.Column="1">
                <Grid Visibility="{Binding IsGeneralVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="no siema general"
                               Foreground="White"
                               FontSize="36"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />

                    <StackPanel Orientation="Horizontal"
                                Margin="0 0 0 5">
                        <TextBox TextWrapping="Wrap"
                                 Width="40"
                                 Height="20"
                                 Text="{Binding TournamentViewModel.ApiRefreshRateMiliseconds}"
                                 PreviewTextInput="NumberValidationTextBox"
                                 Padding="0 1 0 0"
                                 Background="#9E9E9E"
                                 MaxLength="5" />
                        <TextBlock Text="Name"
                                   Foreground="White"
                                   FontSize="16"
                                   Margin="5 0 0 3" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal"
                                Margin="0 0 0 5">
                        <TextBox TextWrapping="Wrap"
                                 Width="40"
                                 Height="20"
                                 Text="{Binding TournamentViewModel.ApiRefreshRateMiliseconds}"
                                 PreviewTextInput="NumberValidationTextBox"
                                 Padding="0 1 0 0"
                                 Background="#9E9E9E"
                                 MaxLength="5" />
                        <TextBlock Text=""
                                   Foreground="White"
                                   FontSize="16"
                                   Margin="5 0 0 3" />
                    </StackPanel>
                </Grid>

                <Grid Visibility="{Binding IsGeneralVisible, Converter={StaticResource ReverseBoolToVisibilityConverter}}">
                    <TextBlock Text="no siema sub rule"
                               Foreground="White"
                               FontSize="36"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
