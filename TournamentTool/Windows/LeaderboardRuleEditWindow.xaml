<Window x:Class="TournamentTool.Windows.LeaderboardRuleEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TournamentTool.Windows"
        xmlns:models="clr-namespace:TournamentTool.Models"
        xmlns:RankingModels="clr-namespace:TournamentTool.Models.Ranking"
        xmlns:components="clr-namespace:TournamentTool.Components.Buttons"
        xmlns:local2="clr-namespace:TournamentTool.Components"
        xmlns:viewmodels="clr-namespace:TournamentTool.ViewModels"
        xmlns:converters="clr-namespace:TournamentTool.Converters"
        d:DataContext="{d:DesignInstance Type=viewmodels:LeaderboardRuleEditViewModel}"
        mc:Ignorable="d"
        d:DesignWidth="500"
        d:DesignHeight="350"
        Background="#1E1E1E"
        Title="Rule Edit"
        BorderThickness="0.75"
        BorderBrush="Black"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        Width="600"
        Height="450">
    <Window.Resources>
        <converters:EnumDisplayNameConverter x:Key="EnumDisplayNameConverter"/>
        
        <ContextMenu x:Key="SubRuleContextMenu">
            <MenuItem Header="Remove"
                      Command="{Binding DataContext.RemoveSubRuleCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                      CommandParameter="{Binding .}"/>
        </ContextMenu>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="29" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              Background="#000D14">
            <components:ButtonTaskbar Width="30"
                                      Height="30"
                                      FontSize="20"
                                      WindowChrome.IsHitTestVisibleInChrome="True"
                                      HorizontalAlignment="Right"
                                      ColorBrush="#ff000f"
                                      ContentText="X"
                                      Padding="1"
                                      Click="ExitButtonClick" />
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>


            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <components:ButtonNormal HorizontalAlignment="Center"
                                             Width="100"
                                             ContentText="Settings"
                                             FontSize="20"
                                             OnCommand="{Binding OpenGeneralCommand}" />
                </Grid>

                <ListView Grid.Row="1"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          Background="#21272b"
                          BorderThickness="0"
                          SelectionMode="Single"
                          AllowDrop="True"
                          SelectedItem="{Binding SelectedSubRule}"
                          ItemsSource="{Binding Rule.SubRules}">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Background"
                                    Value="#404447" />
                            <Setter Property="Foreground"
                                    Value="#bcbcbc" />
                            <Setter Property="ContextMenu"
                                    Value="{StaticResource SubRuleContextMenu}"/>
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Width="190"
                                  Height="20"
                                  HorizontalAlignment="Center">
                                <TextBlock Text="{Binding TimeText}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontSize="16"
                                           Margin="0 0 0 0" />
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <Grid Grid.Row="2"
                      Background="#000D14">

                    <components:ButtonPresets HorizontalAlignment="Left"
                                              ButtonText="+"
                                              OnConsoleCommand="{Binding AddSubRuleCommand}"
                                              Margin="5 0 0 0" />
                </Grid>
            </Grid>

            <Grid Grid.Column="1">
                <StackPanel Orientation="Vertical"
                            Visibility="{Binding IsGeneralVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                            Margin="10 10 0 0">

                    <StackPanel Orientation="Horizontal"
                                Margin="0 0 0 5">
                        <TextBox TextWrapping="Wrap"
                                 Width="120"
                                 Height="20"
                                 Text="{Binding Rule.Name}"
                                 Padding="0 1 0 0"
                                 Background="#9E9E9E" />
                        <TextBlock Text="Name"
                                   Foreground="White"
                                   FontSize="16"
                                   Margin="5 0 0 3" />
                    </StackPanel>


                    <StackPanel Orientation="Horizontal"
                                Margin="0 3 0 5">
                        <ComboBox Width="150"
                                  ItemsSource="{Binding Rule.FilteredMilestones}"
                                  SelectedItem="{Binding Rule.ChosenMilestone, Mode=TwoWay}"
                                  Style="{StaticResource ComboBoxTest2}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={StaticResource EnumDisplayNameConverter}}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <TextBlock Foreground="White"
                                   FontSize="16"
                                   Margin="5 0 0 3">
                            <Run Text="Choose" />
                            <Run Text="{Binding Rule.RuleTypeText}" />
                        </TextBlock>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <components:ButtonNormal ContentText="Switch Rule Type"
                                                 Width="100"
                                                 Height="25"
                                                 HorizontalAlignment="Left"
                                                 Margin="0 3 0 5"
                                                 OnCommand="{Binding Rule.SwitchRuleTypeCommand}" />
                        <TextBlock Foreground="White"
                                   FontSize="14"
                                   Margin="5 5 0 0">
                            <Run Text="Type:"/>
                            <Run Text="{Binding Rule.RuleTypeText}"/>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>

                <Grid Visibility="{Binding IsGeneralVisible, Converter={StaticResource ReverseBoolToVisibilityConverter}}">
                    <StackPanel Orientation="Vertical"
                                Margin="10 2 0 0">

                        <TextBlock Text="Config"
                                   Foreground="Wheat"
                                   FontSize="32"
                                   FontWeight="SemiBold"
                                   Margin="0 0 0 10" />

                        <StackPanel Orientation="Horizontal"
                                    Margin="0 0 0 5">
                            <TextBox TextWrapping="Wrap"
                                     Width="160"
                                     Height="20"
                                     Text="{Binding SelectedSubRule.Description}"
                                     Padding="0 1 0 0"
                                     Background="#9E9E9E" />
                            <TextBlock Text="Description"
                                       Foreground="White"
                                       FontSize="16"
                                       Margin="5 0 0 3" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                    Margin="0 0 0 5">
                            <TextBox TextWrapping="Wrap"
                                     Width="64"
                                     Height="20"
                                     Text="{Binding SelectedSubRule.Time, UpdateSourceTrigger=PropertyChanged}"
                                     PreviewTextInput="NumberValidationTextBox"
                                     Padding="0 1 0 0"
                                     MaxLength="8"
                                     Background="#9E9E9E" />
                            <TextBlock Text="Time (ms to mm:ss.fff)"
                                       Foreground="White"
                                       FontSize="16"
                                       Margin="5 0 0 3" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                    Margin="0 0 0 5">
                            <TextBox TextWrapping="Wrap"
                                     Width="50"
                                     Height="20"
                                     Text="{Binding SelectedSubRule.BasePoints}"
                                     PreviewTextInput="NumberValidationTextBox"
                                     Padding="0 1 0 0"
                                     MaxLength="6"
                                     Background="#9E9E9E" />
                            <TextBlock Text="Base Points"
                                       Foreground="White"
                                       FontSize="16"
                                       Margin="5 0 0 3" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                    Margin="0 0 0 5">
                            <TextBox TextWrapping="Wrap"
                                     Width="50"
                                     Height="20"
                                     Text="{Binding SelectedSubRule.MaxWinners}"
                                     PreviewTextInput="NumberValidationTextBox"
                                     Padding="0 1 0 0"
                                     MaxLength="6"
                                     Background="#9E9E9E" />
                            <TextBlock Text="Max Winners"
                                       Foreground="White"
                                       FontSize="16"
                                       Margin="5 0 0 3" />
                        </StackPanel>

                        <CheckBox IsChecked="{Binding SelectedSubRule.Repeatable}"
                                  Content="Repeatable"
                                  Foreground="White"
                                  Margin="0 0 0 5" />
                    </StackPanel>

                    <Line X1="0"
                          Y1="220"
                          X2="600"
                          Y2="220"
                          Stroke="#404447"
                          StrokeThickness="2" />

                    <StackPanel VerticalAlignment="Bottom"
                                Background="Transparent"
                                Height="200"
                                Margin="10 0 0 0">
                        <TextBlock Text="Lua"
                                   Foreground="Wheat"
                                   FontSize="32"
                                   FontWeight="SemiBold"
                                   Margin="0 0 0 10" />

                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Margin="0 -4 10 0">
                            <TextBlock Text="Scripts: "
                                       Foreground="White"
                                       FontSize="16" />
                            <ComboBox Width="150"
                                      Height="25"
                                      Style="{StaticResource ComboBoxTest2}" />
                        </StackPanel>

                        <Border BorderBrush="Black"
                                Width="480"
                                Height="109"
                                HorizontalAlignment="Left"
                                BorderThickness="1"
                                Margin="0 9 0 0">
                            <TextBlock Text="Script description"
                                       Foreground="White"
                                       TextWrapping="Wrap"
                                       FontSize="12"
                                       Background="Transparent"
                                       Margin="5"/>
                        </Border>

                    </StackPanel>

                </Grid >
            </Grid>
        </Grid>
    </Grid>
</Window>
