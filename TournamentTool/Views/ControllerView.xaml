<UserControl x:Class="TournamentTool.Views.ControllerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TournamentTool.Views"
             xmlns:components="clr-namespace:TournamentTool.Components.Buttons"
             xmlns:local2="clr-namespace:TournamentTool.Components"
             xmlns:viewmodels="clr-namespace:TournamentTool.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:ControllerViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="576"
             d:DesignWidth="1024"
             Background="#383A3C">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              Background="#000D14">
            <TextBlock FontSize="16"
                       Height="25"
                       Padding="0 1 0 0"
                       Margin="5 0 0 0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top">
                <Run Foreground="DarkGray"
                     Text="Connected: " />
                <Run Foreground="White"
                     Text="{Binding IsConnectedToWebSocket, Mode=OneWay}" />
            </TextBlock>

            <TextBlock Text="Search: "
                       FontSize="18"
                       HorizontalAlignment="Right"
                       Foreground="DarkGray"
                       Margin="0 0 207 0" />
            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     Width="200"
                     Height="18"
                     HorizontalAlignment="Right"
                     Margin="0 0 5 0" />
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="426" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="240" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Canvas Background="LightGray"
                            Width="{Binding CanvasWidth}"
                            Height="{Binding CanvasHeight}"
                            SizeChanged="Canvas_SizeChanged"
                            AllowDrop="True"
                            ClipToBounds="True">
                        <ItemsControl ItemsSource="{Binding POVs}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <Canvas />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemContainerStyle>
                                <Style TargetType="ContentPresenter">
                                    <Setter Property="Canvas.Left"
                                            Value="{Binding X}" />
                                    <Setter Property="Canvas.Top"
                                            Value="{Binding Y}" />
                                    <Setter Property="Width"
                                            Value="{Binding Width}" />
                                    <Setter Property="Height"
                                            Value="{Binding Height}" />
                                </Style>
                            </ItemsControl.ItemContainerStyle>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="LightBlue"
                                            Width="{Binding Width}"
                                            Height="{Binding Height}"
                                            BorderBrush="Black"
                                            BorderThickness="1"
                                            CornerRadius="5"
                                            Drop="Border_Drop">
                                        <TextBlock Text="{Binding DisplayedPlayer}"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center" />
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Canvas>
                </Grid>

                <Grid Grid.Row="1">
                    <WrapPanel Orientation="Vertical"
                               Margin="10 5 5 5">
                        <TextBlock Text="Canvas:"
                                   FontSize="16"
                                   Foreground="White" />
                        <TextBlock FontSize="12"
                                   Foreground="White">
                            <Run Text="Width: " />
                            <Run Text="{Binding CanvasWidth, Mode=OneWay}" />
                        </TextBlock>
                        <TextBlock FontSize="12"
                                   Foreground="White">
                            <Run Text="Height: " />
                            <Run Text="{Binding CanvasHeight, Mode=OneWay}" />
                        </TextBlock>
                        <TextBlock FontSize="12"
                                   Foreground="White">
                            <Run Text="Height: " />
                            <Run Text="{Binding CanvasAspectRatio, Mode=OneWay}" />
                        </TextBlock>
                        <TextBlock FontSize="12"
                                   Foreground="White">
                            <Run Text="x axis ratio: " />
                            <Run Text="{Binding XAxisRatio, Mode=OneWay}" />
                        </TextBlock>
                        <TextBlock FontSize="12"
                                   Foreground="White">
                            <Run Text="y axis ratio: " />
                            <Run Text="{Binding YAxisRatio, Mode=OneWay}" />
                        </TextBlock>

                        <TextBlock Text="OBS Settings:"
                                   FontSize="16"
                                   Foreground="White"
                                   Margin="0 10 0 0" />
                        <TextBlock FontSize="12"
                                   Foreground="White">
                            <Run Text="Base Width: " />
                            <Run Text="{Binding OBSVideoSettings.BaseWidth, Mode=OneWay}" />
                        </TextBlock>
                        <TextBlock FontSize="12"
                                   Foreground="White">
                            <Run Text="Base Height: " />
                            <Run Text="{Binding OBSVideoSettings.BaseHeight, Mode=OneWay}" />
                        </TextBlock>
                        <TextBlock FontSize="12"
                                   Foreground="White">
                            <Run Text="Output Height: " />
                            <Run Text="{Binding OBSVideoSettings.OutputWidth, Mode=OneWay}" />
                        </TextBlock>

                        <TextBlock FontSize="12"
                                   Foreground="White">
                            <Run Text="Output Height: " />
                            <Run Text="{Binding OBSVideoSettings.OutputHeight, Mode=OneWay}" />
                        </TextBlock>
                        <TextBlock FontSize="12"
                                   Foreground="White">
                            <Run Text="Aspect ratio: " />
                            <Run Text="{Binding OBSVideoSettings.AspectRatio, Mode=OneWay}" />
                        </TextBlock>
                    </WrapPanel>


                    <!--
                    <TextBlock Text="MORE CONTROLS IN FUTURE"
                               FontSize="48"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               VerticalAlignment="Center" />
                    -->
                </Grid>
            </Grid>

            <Grid Grid.Column="1">
                <ListView ScrollViewer.VerticalScrollBarVisibility="Auto"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          Background="Red"
                          BorderThickness="0"
                          VerticalAlignment="Top"
                          HorizontalAlignment="Left"
                          VirtualizingPanel.IsVirtualizing="True"
                          VirtualizingPanel.VirtualizationMode="Recycling"
                          SizeChanged="Grid_SizeChanged"
                          AllowDrop="True"
                          ItemsSource="{Binding FilteredPlayers}">
                    <ListView.ItemTemplate>
                        <DataTemplate DataType="models:Player">
                            <Border BorderBrush="Black"
                                    BorderThickness="1"
                                    Width="110"
                                    Height="45"
                                    PreviewMouseLeftButtonDown="Border_PreviewMouseLeftButtonDown"
                                    MouseMove="Border_MouseMove">
                                <StackPanel Margin="0 5 0 0">
                                    <TextBlock Text="{Binding Name}"
                                               Width="100"
                                               Foreground="White"
                                               FontWeight="Bold" />
                                    <TextBlock Text="{Binding PersonalBest}"
                                               Width="100"
                                               Foreground="White" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="5" />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Width"
                                    Value="120" />
                            <Setter Property="Height"
                                    Value="55" />
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
