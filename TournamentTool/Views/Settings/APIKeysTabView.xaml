<UserControl x:Class="TournamentTool.Views.Settings.APIKeysTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TournamentTool.Views.Settings"
             xmlns:settings="clr-namespace:TournamentTool.ViewModels.Settings"
             xmlns:buttons="clr-namespace:TournamentTool.Components.Buttons"
             d:DataContext="{d:DesignInstance Type=settings:APIKeysTabViewModel}"
             mc:Ignorable="d"
             d:DesignWidth="1024"
             d:DesignHeight="605"
             d:Background="Black">
    <StackPanel Margin="15">
        <TextBlock  Text="Twitch"
                    Foreground="Wheat"
                    FontSize="24"
                    FontWeight="SemiBold"
                    Padding="0"
                    Margin="0 0 0 5" />

        <StackPanel Orientation="Horizontal"
                    Margin="0 0 0 5">
            <buttons:ButtonNormal ContentText="Remove"
                                  Width="60"
                                  OnCommand="{Binding ClearAccessTokenCommand}" />
            
            <TextBlock Text="Masked Access Token: "
                       Foreground="White"
                       FontSize="16"
                       Padding="0"
                       Margin="5 0 0 0" />

            <TextBlock Text="{Binding MaskedTwitchAccessToken}"
                       Width="268.5"
                       Height="18.5"
                       Padding="2 1 0 0"
                       Foreground="LightGoldenrodYellow"
                       FontSize="18" />
        </StackPanel>
        
        <StackPanel Orientation="Horizontal"
                    Margin="0 0 0 5">
            <ToggleButton IsChecked="{Binding ShowCustomTwitchClientID}"
                          VerticalAlignment="Center" />

            <StackPanel Orientation="Horizontal"
                        Height="25">
                <Border Visibility="{Binding ShowCustomTwitchClientID, Converter={StaticResource ReverseBoolToVisibilityConverter}}"
                        Height="20"
                        Width="270"
                        BorderBrush="Yellow"
                        BorderThickness="0.75">
                    <TextBlock Text="{Binding MaskedCustomTwitchClientID}"
                               Width="268.5"
                               Height="18.5"
                               Padding="2 1 0 0"
                               FontSize="18"
                               Background="#9E9E9E" />
                </Border>

                <TextBox Visibility="{Binding ShowCustomTwitchClientID, Converter={StaticResource BoolToVisibilityConverter}}"
                         Text="{Binding CustomTwitchClientID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Width="270"
                         Height="20"
                         Background="#9E9E9E" />

                <TextBlock Text="Custom Client ID"
                           ToolTipService.InitialShowDelay="0"
                           ToolTipService.ShowDuration="60000"
                           ToolTip="If you register your own twitch application at dev.twitch.tv/console/apps then you can set here client id from app type public with url: http://localhost:8080/"
                           Foreground="White"
                           FontSize="16"
                           Padding="0"
                           Margin="5 0 0 0" />
            </StackPanel>
        </StackPanel>

        <TextBlock Text="Misc"
                   Foreground="Wheat"
                   FontSize="24"
                   FontWeight="SemiBold"
                   Padding="0"
                   Margin="0 5 0 0" />
        
        <StackPanel Orientation="Horizontal"
                    Margin="0 0 0 5">
            <ToggleButton IsChecked="{Binding ShowMCSRRankedAPI}"
                          VerticalAlignment="Center" />

            <StackPanel Orientation="Horizontal"
                        Height="25">
                <Border Visibility="{Binding ShowMCSRRankedAPI, Converter={StaticResource ReverseBoolToVisibilityConverter}}"
                        BorderBrush="Yellow"
                        Height="20"
                        Width="270"
                        BorderThickness="0.75">
                    <TextBlock Text="{Binding MaskedMCSRRankedAPI}"
                               Width="268.5"
                               Height="18.5"
                               Padding="2 1 0 0"
                               FontSize="18"
                               Background="#9E9E9E" />
                </Border>

                <TextBox Visibility="{Binding ShowMCSRRankedAPI, Converter={StaticResource BoolToVisibilityConverter}}"
                         Text="{Binding MCSRRankedAPI, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Width="270"
                         Height="20"
                         Background="#9E9E9E" />

                <TextBlock Text="MCSR Ranked API key (Currently not working!)"
                           ToolTipService.InitialShowDelay="0"
                           ToolTipService.ShowDuration="60000"
                           ToolTip="MCSR Ranked api key to with expanded rate-limit"
                           Foreground="White"
                           FontSize="16"
                           Padding="0"
                           Margin="5 0 0 0" />
            </StackPanel>
        </StackPanel>

        <StackPanel Orientation="Horizontal"
                    Margin="0 0 0 5">
            <ToggleButton IsChecked="{Binding ShowPacemanAPI}"
                          VerticalAlignment="Center" />

            <StackPanel Orientation="Horizontal"
                        Height="25">
                <Border Visibility="{Binding ShowPacemanAPI, Converter={StaticResource ReverseBoolToVisibilityConverter}}"
                        BorderBrush="Yellow"
                        Height="20"
                        Width="270"
                        BorderThickness="0.75">
                    <TextBlock Text="{Binding MaskedPacemanAPI}"
                               Width="268.5"
                               Height="18.5"
                               Padding="2 1 0 0"
                               FontSize="18"
                               Background="#9E9E9E" />
                </Border>

                <TextBox Visibility="{Binding ShowPacemanAPI, Converter={StaticResource BoolToVisibilityConverter}}"
                         Text="{Binding PacemanAPI, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Width="270"
                         Height="20"
                         Background="#9E9E9E" />
                
                <TextBlock Text="Paceman API (Currently not working!)"
                           ToolTipService.InitialShowDelay="0"
                           ToolTipService.ShowDuration="60000"
                           ToolTip="I'm not sure if there is any paceman api key"
                           Foreground="White"
                           FontSize="16"
                           Padding="0"
                           Margin="5 0 0 0" />
            </StackPanel>
        </StackPanel>
    </StackPanel>
</UserControl>
