<UserControl x:Class="TournamentTool.Views.PlayerManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="clr-namespace:Microsoft.Xaml.Behaviors;assembly=Microsoft.Xaml.Behaviors"
             xmlns:behaviors="clr-namespace:TournamentTool.Components.Behaviors"
             xmlns:converters="clr-namespace:TournamentTool.Converters"
             xmlns:components="clr-namespace:TournamentTool.Components.Buttons"
             xmlns:viewmodels="clr-namespace:TournamentTool.ViewModels"
             xmlns:models="clr-namespace:TournamentTool.Models"
             d:DataContext="{d:DesignInstance Type=viewmodels:PlayerManagerViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="601"
             d:DesignWidth="1082"
             Background="#1E1E1E">
    <UserControl.Resources>
        <ContextMenu x:Key="ListViewContextMenu">
            <MenuItem Header="View"
                      Command="{Binding DataContext.ViewPlayerInfoCommand, RelativeSource={RelativeSource AncestorType=ListBox}}" 
                      CommandParameter="{Binding}"/>
            <MenuItem Header="Edit"
                      Command="{Binding DataContext.EditPlayerCommand, RelativeSource={RelativeSource AncestorType=ListBox}}" 
                      CommandParameter="{Binding}"/>
            <MenuItem Header="Validate"
                      Command="{Binding DataContext.ValidatePlayerCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                      CommandParameter="{Binding}"/>
            <MenuItem Header="Fix head"
                      Command="{Binding DataContext.FixPlayerHeadCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                      CommandParameter="{Binding}"/>
            <MenuItem Header="Delete"
                      Command="{Binding DataContext.RemovePlayerCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                      CommandParameter="{Binding}"/>
        </ContextMenu>
        <ContextMenu x:Key="ListViewContextMenuPanel">
            <MenuItem Header="Add player"
                      Command="{Binding AddPlayerCommand}" />
        </ContextMenu>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0"
              Background="#2d2d2d">
            <Grid.RowDefinitions>
                <RowDefinition Height="180"/>
                <RowDefinition Height="70" />
                <RowDefinition Height="70" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0"
                        Width="155"
                        Orientation="Vertical"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Center">
                <components:ButtonNormal ContentText="Add player"
                                         FontSize="15"
                                         Width="150"
                                         Height="30"
                                         Background="Green"
                                         OnCommand="{Binding AddPlayerCommand}"
                                         Margin="0 5 0 0" />

                <StackPanel Orientation="Horizontal"
                            Margin="2 8 0 0">
                    <components:ButtonNormal ContentText="Validate IGN's"
                                             FontSize="16"
                                             FontWeight="SemiBold"
                                             Width="125"
                                             Height="30"
                                             OnCommand="{Binding ValidatePlayersCommand}" />

                    <Border BorderBrush="Gray"
                            BorderThickness="0.75"
                            CornerRadius="5"
                            Background="#1b1d1f"
                            Width="25"
                            Height="30"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            ToolTipService.InitialShowDelay="0"
                            ToolTipService.ShowDuration="60000"
                            Margin="0 0 0 0">
                        <Border.ToolTip>
                            <ToolTip>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock 
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Margin="5,3,0,0"
                                               VerticalAlignment="Center">
                                        <Run Text="Validates in game name for players using their non empty uuid's (process could take a second per user)"/>
                                        <LineBreak/>
                                        <Run Text="A red exclamation mark on a player indicates that their UUID has not been updated and cannot be validated"/>
                                    </TextBlock>
                                </StackPanel>
                            </ToolTip>
                        </Border.ToolTip>

                        <TextBlock Text="?"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   FontSize="22"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                    </Border>
                </StackPanel>

                <components:ButtonNormal ContentText="Fix players heads"
                                         FontSize="15"
                                         Width="150"
                                         Height="30"
                                         OnCommand="{Binding FixPlayersHeadsCommand}"
                                         Margin="0 10 0 0" />

                <components:ButtonNormal ContentText="Remove all players"
                                         FontSize="15"
                                         Width="150"
                                         Height="30"
                                         Background="Red"
                                         OnCommand="{Binding RemoveAllPlayerCommand}"
                                         Margin="0 10 0 0" />
            </StackPanel>

            <StackPanel Grid.Row="1"
                        Orientation="Vertical"
                        HorizontalAlignment="Center">
                <ComboBox Style="{StaticResource ComboBoxTest2}"
                          DisplayMemberPath="Name"
                          ItemsSource="{Binding PaceManEvents, Mode=OneWay}"
                          SelectedValue="{Binding Path=ChosenEvent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          Width="150"
                          Height="20" />

                <components:ButtonNormal ContentText="Load PaceMan event"
                                         FontSize="14"
                                         Width="150"
                                         Height="30"
                                         OnCommand="{Binding LoadFromPaceManCommand}"
                                         Margin="0 3 0 0" />
            </StackPanel>

            <StackPanel Grid.Row="2"
                        HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal"
                            Margin="0 5 0 0">
                    <components:ButtonNormal ContentText="Import"
                                             FontSize="16"
                                             FontWeight="SemiBold"
                                             Width="125"
                                             Height="30"
                                             OnCommand="{Binding ImportPlayersCommand}" />

                    <Border BorderBrush="Gray"
                            BorderThickness="0.75"
                            CornerRadius="5"
                            Background="#1b1d1f"
                            Width="25"
                            Height="30"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            ToolTipService.InitialShowDelay="0"
                            ToolTipService.ShowDuration="60000"
                            Margin="0 0 0 0">
                        <Border.ToolTip>
                            <ToolTip>
                                <TextBlock FontSize="18">
                                    <Run Text="(.json extension) JSON, Whitelist format"
                                         FontWeight="Bold"
                                         Foreground="Wheat" />
                                    <LineBreak />
                                    <Run Text="(.ranked extension) JSON, Headers (all unique): "
                                         FontWeight="Bold"
                                         Foreground="Wheat" />
                                    <Run Text="ign | twitch_username | display_name" />
                                    <LineBreak />
                                    <Run Text="(.csv extension) CSV, Headers (all unique): "
                                         FontWeight="Bold"
                                         Foreground="Wheat" />
                                    <Run Text="Name | IGN | UUID | PB | Twitch-Main(Optional) | Twitch-Alt(Optional)" />
                                </TextBlock>
                            </ToolTip>
                        </Border.ToolTip>

                        <TextBlock Text="?"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   FontSize="22"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                    </Border>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            Margin="0 5 0 0">
                    <components:ButtonNormal ContentText="Export"
                                             FontSize="16"
                                             FontWeight="SemiBold"
                                             Width="125"
                                             Height="30"
                                             OnCommand="{Binding ExportPlayersCommand}" />

                    <Border BorderBrush="Gray"
                            BorderThickness="0.75"
                            CornerRadius="5"
                            Background="#1b1d1f"
                            Width="25"
                            Height="30"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            ToolTipService.InitialShowDelay="0"
                            ToolTipService.ShowDuration="60000"
                            Margin="0 0 0 0">
                        <Border.ToolTip>
                            <ToolTip>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Exports whole whitelist into selected folder"
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Margin="5,3,0,0"
                                               VerticalAlignment="Center" />
                                </StackPanel>
                            </ToolTip>
                        </Border.ToolTip>

                        <TextBlock Text="?"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   FontSize="22"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center" />
                    </Border>
                </StackPanel>
            </StackPanel>
            
            <StackPanel Grid.Row="3" VerticalAlignment="Bottom" Margin="0 0 0 5">
                <StackPanel Orientation="Horizontal"
                            Margin="6 0 0 5">
                    <Grid>
                        <TextBox Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Width="128"
                                 Height="20"
                                 Background="#9E9E9E"
                                 HorizontalAlignment="Center"
                                 Margin="0 0 0 0">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Enter"
                                            Command="{Binding SubmitSearchCommand}" />
                            </TextBox.InputBindings>
                        </TextBox>
                        <TextBlock Visibility="{Binding IsSearchEmpty, Converter={StaticResource BoolToVisibilityConverter}}"
                                   Foreground="Black"
                                   Opacity="0.4"
                                   IsHitTestVisible="False"
                                   Padding="2"
                                   Margin="1 0 0 0"
                                   Text="Search players..." />
                    </Grid>

                    <components:ButtonNormal ContentText="X"
                                             FontSize="12"
                                             Width="20"
                                             Height="21"
                                             OnCommand="{Binding ClearSearchFieldCommand}"
                                             Margin="3 0 0 0" />
                </StackPanel>
                
                <StackPanel Orientation="Horizontal"
                            Margin="5 0 0 0">
                <ComboBox Style="{StaticResource ComboBoxTest2}"
                          DisplayMemberPath="DisplayName"
                          SelectedValuePath="Value"
                          ItemsSource="{Binding Path=SortingType, Converter={converters:EnumToCollectionConverter}, Mode=OneTime}"
                          SelectedValue="{Binding Path=SortingType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          Width="105"
                          Height="20" />
                    <components:ButtonNormal ContentText="Search"
                                             FontSize="12"
                                             IsEnabled="{Binding IsSearchEnabled}"
                                             Width="45"
                                             Height="20"
                                             OnCommand="{Binding SubmitSearchCommand}"
                                             Margin="2 0 0 0" />
                </StackPanel>
                <TextBlock Text="{Binding InformationCount}"
                           Foreground="Wheat"
                           FontSize="12"
                           Margin="5 3 0 -3" />
            </StackPanel>
        </Grid>

        <Grid Grid.Column="1"
              Background="Transparent"
              ContextMenu="{StaticResource ListViewContextMenuPanel}">
            <Line X1="0"
                  Y1="0"
                  X2="0"
                  Y2="2000"
                  Stroke="#000D14"
                  StrokeThickness="3" />

            <ListBox ScrollViewer.VerticalScrollBarVisibility="Visible"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     Background="Transparent"
                     BorderThickness="0"
                     ContextMenu="{StaticResource ListViewContextMenuPanel}"
                     VerticalAlignment="Top"
                     HorizontalAlignment="Left"
                     VirtualizingPanel.IsVirtualizing="True"
                     VirtualizingPanel.VirtualizationMode="Recycling"
                     behaviors:ListBoxExtendSelection.SynchronizedSelectedItems="{Binding SelectedPlayers}"
                     ItemsSource="{Binding FilteredPlayers}"
                     SelectionMode="Extended"
                     Margin="5 0 0 0">
                <i:Interaction.Behaviors>
                    <behaviors:ListBoxExtendSelection />
                </i:Interaction.Behaviors>
                <ListBox.InputBindings>
                    <KeyBinding Key="Delete"
                                Command="{Binding RemoveSelectedPlayerCommand}" />
                </ListBox.InputBindings>
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="models:Player">
                        <Border BorderBrush="Gray"
                                BorderThickness="1"
                                Width="110">
                            <Grid>
                                <StackPanel>
                                    <TextBlock Text="{Binding TeamName}"
                                               Foreground="#b3f5c8"
                                               Background="Transparent"
                                               Visibility="{Binding IsShowingTeamName, Converter={StaticResource BoolToVisibilityConverter}}"
                                               FontSize="12"
                                               Width="100"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Top"
                                               TextAlignment="Center"
                                               Margin="0 4 0 0" />
                                    <TextBlock Text="{Binding Name}"
                                               Foreground="Wheat"
                                               Background="Transparent"
                                               FontSize="14"
                                               Width="100"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Top"
                                               TextAlignment="Center"
                                               Margin="0 2 0 0" />
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding PersonalBest}"
                                                   Foreground="White"
                                                   Background="Transparent"
                                                   FontSize="21"
                                                   Width="64"
                                                   Height="30"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Center"
                                                   TextAlignment="Center"
                                                   Margin="5 5 0 0" />
                                        <Image Width="30"
                                               Height="30"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Top"
                                               Margin="0 5 0 0"
                                               Source="{Binding Image}" />
                                    </StackPanel>

                                    <TextBlock FontSize="12"
                                               VerticalAlignment="Bottom"
                                               Background="Transparent"
                                               TextAlignment="Center"
                                               Foreground="#8f8067"
                                               Margin="0 1 0 2">
                                        <Run Text="{Binding StreamData.Main}" />
                                        <LineBreak />
                                        <Run Text="{Binding StreamData.Alt}" />
                                    </TextBlock>
                                </StackPanel>

                                <Border Visibility="{Binding IsUUIDEmpty, Converter={StaticResource BoolToVisibilityConverter}}"
                                        Grid.Row="0"
                                        Background="Red"
                                        CornerRadius="10"
                                        VerticalAlignment="Top"
                                        HorizontalAlignment="Right"
                                        Width="15"
                                        Height="15"
                                        Padding="1"
                                        Margin="0 3 3 0">
                                    <TextBlock Foreground="White"
                                               FontWeight="Bold"
                                               Padding="0"
                                               Text="!"
                                               FontSize="14"
                                               Margin="4 -4 0 0" />
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Margin"
                                Value="0" />
                        <Setter Property="Padding"
                                Value="0" />
                        <Setter Property="ContextMenu" Value="{StaticResource ListViewContextMenu}"/>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </Grid>
    </Grid>
</UserControl>
