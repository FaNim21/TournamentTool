<UserControl x:Class="TournamentTool.Views.PlayerManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TournamentTool.Views"
             xmlns:components="clr-namespace:TournamentTool.Components.Buttons"
             xmlns:local2="clr-namespace:TournamentTool.Components"
             xmlns:viewmodels="clr-namespace:TournamentTool.ViewModels"
             xmlns:models="clr-namespace:TournamentTool.Models"
             d:DataContext="{d:DesignInstance Type=viewmodels:PlayerManagerViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="576"
             d:DesignWidth="1024"
             Background="#1E1E1E">
    <UserControl.Resources>
        <ContextMenu x:Key="ListViewContextMenu">
            <MenuItem Header="Edit"
                      Command="{Binding EditPlayerCommand}" />
            <MenuItem Header="Delete"
                      Command="{Binding RemovePlayerCommand}" />
        </ContextMenu>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid Background="#2d2d2d"
                  Width="300"
                  Height="240"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Top"
                  Margin="0 24 0 0">
                <Grid.Resources>
                    <Style TargetType="{x:Type StackPanel}">
                        <Setter Property="Margin"
                                Value="0 10 0 0" />
                    </Style>
                </Grid.Resources>

                <TextBlock FontSize="18"
                           Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}"
                           Margin="0 10 0 0"
                           TextAlignment="Center"
                           Width="300"
                           Height="30"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top">
                    <Run Foreground="DarkGray"
                         Text="Is Editing: " />
                    <Run Foreground="White"
                         Text="{Binding Player.Name, Mode=OneWay, Converter={StaticResource EmptyStringConverter}}" />
                </TextBlock>

                <StackPanel Margin="0 30 15 0">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="-2 10 0 0">
                        <TextBlock Text=" Name: "
                                   Foreground="White"
                                   Height="18"
                                   FontSize="16"
                                   Padding="0"
                                   Margin="5 0 0 3" />
                        <TextBox TextWrapping="Wrap"
                                 Width="120"
                                 Height="20"
                                 Text="{Binding Player.Name, Mode=TwoWay}"
                                 Padding="0 2 0 0"
                                 Background="#9E9E9E" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <TextBlock Text="    IGN: "
                                   Foreground="White"
                                   Height="18"
                                   FontSize="16"
                                   Padding="0"
                                   Margin="5 0 0 3" />
                        <TextBox TextWrapping="Wrap"
                                 Width="120"
                                 Height="20"
                                 Text="{Binding Player.InGameName, Mode=TwoWay}"
                                 Padding="0 2 0 0"
                                 Background="#9E9E9E" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <TextBlock Text="      PB: "
                                   Foreground="White"
                                   Height="18"
                                   FontSize="16"
                                   Padding="0"
                                   Margin="5 0 0 3" />
                        <TextBox TextWrapping="Wrap"
                                 Width="120"
                                 Height="20"
                                 Text="{Binding Player.PersonalBest, Mode=TwoWay}"
                                 Padding="0 2 0 0"
                                 Background="#9E9E9E" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="-35 10 0 0">
                        <TextBlock Text="Twitch Main: "
                                   Foreground="White"
                                   Height="18"
                                   FontSize="16"
                                   Padding="0"
                                   Margin="0 0 0 3" />
                        <TextBox TextWrapping="Wrap"
                                 Width="120"
                                 Height="20"
                                 Text="{Binding Player.StreamData.Main, Mode=TwoWay}"
                                 Padding="0 2 0 0"
                                 Background="#9E9E9E" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="-19 10 0 0">
                        <TextBlock Text="Twitch Alt: "
                                   Foreground="White"
                                   Height="18"
                                   FontSize="16"
                                   Padding="0"
                                   Margin="0 0 0 3" />
                        <TextBox TextWrapping="Wrap"
                                 Width="120"
                                 Height="20"
                                 Text="{Binding Player.StreamData.Alt, Mode=TwoWay}"
                                 Padding="0 2 0 0"
                                 Background="#9E9E9E" />
                    </StackPanel>
                </StackPanel>

                <components:ButtonNormal ContentText="{Binding SaveButtonText}"
                                         Width="150"
                                         Height="25"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Bottom"
                                         OnCommand="{Binding SavePlayerCommand}"
                                         Margin="0 0 0 10" />
            </Grid>

            <Grid Background="#2d2d2d"
                  Width="350"
                  Height="275"
                  VerticalAlignment="Bottom">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0"
                            Orientation="Horizontal"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Center">
                    <components:ButtonNormal ContentText="Remove all players"
                                             FontSize="15"
                                             Width="150"
                                             Height="30"
                                             OnCommand="{Binding RemoveAllPlayerCommand}"
                                             Margin="10" />

                    <components:ButtonNormal ContentText="Fix players heads"
                                             FontSize="15"
                                             Width="150"
                                             Height="30"
                                             OnCommand="{Binding FixPlayersHeadsCommand}"
                                             Margin="10" />
                </StackPanel>

                <Grid Grid.Row="1">
                    <StackPanel Orientation="Vertical">
                        <ComboBox Style="{StaticResource ComboBoxTest2}"
                                  DisplayMemberPath="Name"
                                  ItemsSource="{Binding PaceManEvents, Mode=OneWay}"
                                  SelectedValue="{Binding Path=ChosenEvent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  Width="150"
                                  Height="20" />

                        <components:ButtonNormal ContentText="Load PaceMan event"
                                                 FontSize="14"
                                                 Width="150"
                                                 Height="30"
                                                 OnCommand="{Binding LoadFromPaceManCommand}" />
                    </StackPanel>

                    <StackPanel Orientation="Vertical"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Center"
                                Margin="0">
                        <StackPanel Orientation="Horizontal">
                            <components:ButtonNormal ContentText="Load from JSON"
                                                     FontSize="14"
                                                     Width="125"
                                                     Height="30"
                                                     OnCommand="{Binding LoadFromJSONCommand}" />

                            <Border BorderBrush="Gray"
                                    BorderThickness="0.75"
                                    CornerRadius="5"
                                    Background="#1b1d1f"
                                    Width="25"
                                    Height="30"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    ToolTipService.InitialShowDelay="0"
                                    ToolTipService.ShowDuration="60000"
                                    Margin="0 0 0 0">
                                <Border.ToolTip>
                                    <ToolTip>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="HEADERS: "
                                                       FontWeight="Bold"
                                                       Foreground="Wheat"
                                                       FontSize="20"
                                                       VerticalAlignment="Center" />
                                            <TextBlock Text="(Array of players with those variables) -- ign | twitch_username | display_name"
                                                       Margin="5,3,0,0"
                                                       VerticalAlignment="Center" />
                                        </StackPanel>
                                    </ToolTip>
                                </Border.ToolTip>

                                <TextBlock Text="?"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           FontSize="22"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center" />
                            </Border>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <components:ButtonNormal ContentText="Load from CSV"
                                                     FontSize="14"
                                                     Width="125"
                                                     Height="30"
                                                     OnCommand="{Binding LoadFromCSVCommand}" />

                            <Border BorderBrush="Gray"
                                    BorderThickness="0.75"
                                    CornerRadius="5"
                                    Background="#1b1d1f"
                                    Width="25"
                                    Height="30"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    ToolTipService.InitialShowDelay="0"
                                    ToolTipService.ShowDuration="60000"
                                    Margin="0 0 0 0">
                                <Border.ToolTip>
                                    <ToolTip>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="HEADERS: "
                                                       FontWeight="Bold"
                                                       Foreground="Wheat"
                                                       FontSize="20"
                                                       VerticalAlignment="Center" />
                                            <TextBlock Text="Name | IGN | UUID | PB | Twitch-Main(Optional) | Twitch-Alt(Optional)"
                                                       Margin="5,3,0,0"
                                                       VerticalAlignment="Center" />
                                        </StackPanel>
                                    </ToolTip>
                                </Border.ToolTip>

                                <TextBlock Text="?"
                                           FontWeight="Bold"
                                           Foreground="White"
                                           FontSize="22"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center" />
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>

        <Grid Grid.Column="1">
            <Line X1="0"
                  Y1="0"
                  X2="0"
                  Y2="2000"
                  Stroke="#000D14"
                  StrokeThickness="3"/>

            <ListBox ScrollViewer.VerticalScrollBarVisibility="Visible"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 Background="Transparent"
                 BorderThickness="0"
                 PreviewMouseRightButtonDown="List_PreviewMouseRightButtonDown"
                 VerticalAlignment="Top"
                 HorizontalAlignment="Left"
                 VirtualizingPanel.IsVirtualizing="True"
                 VirtualizingPanel.VirtualizationMode="Recycling"
                 ItemsSource="{Binding Tournament.Players}"
                 Margin="10 0 0 0">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="models:Player">
                    <Border BorderBrush="Gray"
                            BorderThickness="1"
                            Width="110">
                        <StackPanel>
                            <TextBlock Text="{Binding Name}"
                                       Foreground="Wheat"
                                       Background="Transparent"
                                       FontSize="14"
                                       Width="100"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Top"
                                       TextAlignment="Center"
                                       Margin="0 4 0 0" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding PersonalBest}"
                                           Foreground="White"
                                           Background="Transparent"
                                           FontSize="21"
                                           Width="64"
                                           Height="30"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           TextAlignment="Center"
                                           Margin="5 5 0 0" />
                                <Image Width="30"
                                       Height="30"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Top"
                                       Margin="0 5 0 0"
                                       Source="{Binding Image}" />
                            </StackPanel>

                            <TextBlock FontSize="12"
                                       VerticalAlignment="Bottom"
                                       Background="Transparent"
                                       TextAlignment="Center"
                                       Foreground="#8f8067"
                                       Margin="0 1 0 2">
                                        <Run Text="{Binding StreamData.Main}" />
                                        <LineBreak />
                                        <Run Text="{Binding StreamData.Alt}" />
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Margin"
                            Value="0" />
                    <Setter Property="Padding"
                            Value="0" />
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
        </Grid>
    </Grid>
</UserControl>
