<UserControl x:Class="TournamentTool.Views.SceneManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="clr-namespace:Microsoft.Xaml.Behaviors;assembly=Microsoft.Xaml.Behaviors"
             xmlns:behaviors="clr-namespace:TournamentTool.Components.Behaviors"
             xmlns:converters="clr-namespace:TournamentTool.Converters"
             xmlns:components="clr-namespace:TournamentTool.Components.Buttons"
             xmlns:viewmodels="clr-namespace:TournamentTool.ViewModels"
             xmlns:models="clr-namespace:TournamentTool.Models"
             xmlns:selectable="clr-namespace:TournamentTool.ViewModels.Selectable"
             d:DataContext="{d:DesignInstance Type=selectable:SceneManagementViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="601"
             d:DesignWidth="1082"
             Background="#1E1E1E">
    <Grid>
        <StackPanel Margin="10"
                    Orientation="Vertical">
            <TextBlock Foreground="White"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Text="POV Configuration Manual (before next OBS config update)"
                       Margin="0 0 0 10" />
            <TextBlock Foreground="White"
                       FontSize="14"
                       Text="To have a working POV setup, you need to create the following OBS items (you may place them inside any group). The names must follow the POV filter name defined in settings (default: 'pov')."
                       TextWrapping="Wrap"
                       Margin="0 0 0 10" />

            <!-- Point of View -->
            <TextBlock Foreground="White"
                       FontSize="14"
                       TextWrapping="Wrap"
                       Margin="0 5 0 0">
                <Run Text="- Point of View"
                     FontWeight="Bold" />
                <Run Text=" → Source type: Browser, name: pov{name} (example: pov1). Recommended resolution: 1920x1080." />
            </TextBlock>

            <!-- Head View -->
            <TextBlock Foreground="White"
                       FontSize="14"
                       TextWrapping="Wrap"
                       Margin="0 5 0 0">
                <Run Text="- Head View"
                     FontWeight="Bold" />
                <Run Text=" → Source type: Browser, name: headpov{name} (example: headpov1). Required resolution: 180x180." />
            </TextBlock>

            <!-- PB Text -->
            <TextBlock Foreground="White"
                       FontSize="14"
                       TextWrapping="Wrap"
                       Margin="0 5 0 0">
                <Run Text="- PB Text"
                     FontWeight="Bold" />
                <Run Text=" → Source type: Text (GDI+), name: personalbestpov{name} (example: personalbestpov1)." />
            </TextBlock>

            <!-- Display Name -->
            <TextBlock Foreground="White"
                       FontSize="14"
                       TextWrapping="Wrap"
                       Margin="0 5 0 0">
                <Run Text="- Display Name Text"
                     FontWeight="Bold" />
                <Run Text=" → Source type: Text (GDI+), name: pov{name}name (example: pov1name)." />
            </TextBlock>
            
            <TextBlock Foreground="White"
                       FontSize="14"
                       Text="You may freely move or resize these items in OBS according to your layout."
                       TextWrapping="Wrap"
                       Margin="0 15 0 0" />
        </StackPanel>
        
        <TextBlock Text="WORK IN PROGRESS..."
                   Foreground="White"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   FontSize="100" />
    </Grid>
</UserControl>
