<UserControl x:Class="TournamentTool.Views.StatusBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:behaviors="clr-namespace:TournamentTool.Components.Behaviors"
             xmlns:local="clr-namespace:TournamentTool.Views"
             xmlns:models="clr-namespace:TournamentTool.Models"
             xmlns:enums="clr-namespace:TournamentTool.Enums"
             xmlns:components="clr-namespace:TournamentTool.Components.Buttons"
             xmlns:local2="clr-namespace:TournamentTool.Components"
             xmlns:viewmodels="clr-namespace:TournamentTool.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:StatusBarViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="27"
             d:DesignWidth="1024"
             BorderThickness="0 0.75 0 0"
             Background="#2a2a2a"
             BorderBrush="Black">
    
    <Grid Margin="4 1 2 1"
          VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0"
              HorizontalAlignment="Left">
            <TextBlock Text="{Binding Tournament.Name}"
                       FontSize="16"
                       FontWeight="Thin"
                       Foreground="AntiqueWhite" />
        </Grid>

        <StackPanel Grid.Column="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0 0 0 0">

            <Image Width="18"
                   Margin="3 0 5 0">
                <Image.Source>
                    <BitmapImage DecodePixelWidth="18"
                                 UriSource="/Resources/StatusBarIcons/ranked-icon.png" />
                </Image.Source>
            </Image>

            <Image Width="18"
                   Margin="3 0 3 0">
                <Image.Source>
                    <BitmapImage DecodePixelWidth="18"
                                 UriSource="/Resources/StatusBarIcons/twitch-off.png" />
                </Image.Source>
            </Image>

            <Image Width="18"
                   Margin="3 0 3 0">
                <Image.Source>
                    <BitmapImage DecodePixelWidth="18"
                                 UriSource="/Resources/StatusBarIcons/obs-off.png" />
                </Image.Source>
            </Image>

            <Image Width="18"
                   Margin="15 0 3 0">
                <Image.Source>
                    <BitmapImage DecodePixelWidth="18"
                                 UriSource="/Resources/StatusBarIcons/bell-off.png" />
                </Image.Source>
            </Image>

        </StackPanel>
    </Grid>
</UserControl>
