<UserControl x:Class="TournamentTool.Views.StatusBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:behaviors="clr-namespace:TournamentTool.Components.Behaviors"
             xmlns:models="clr-namespace:TournamentTool.Models"
             xmlns:enums="clr-namespace:TournamentTool.Enums"
             xmlns:components="clr-namespace:TournamentTool.Components.Buttons"
             xmlns:local2="clr-namespace:TournamentTool.Components"
             xmlns:statusBar="clr-namespace:TournamentTool.ViewModels.StatusBar"
             d:DataContext="{d:DesignInstance Type=statusBar:StatusBarViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="27"
             d:DesignWidth="1024"
             BorderThickness="0 0.75 0 0"
             Background="#2a2a2a"
             BorderBrush="Black">
    <UserControl.Resources>
        <!-- Styl dla przycisku status item -->
        <Style x:Key="StatusButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="Transparent" />
            <Setter Property="BorderThickness"
                    Value="0" />
            <Setter Property="Width"
                    Value="27" />
            <Setter Property="Height"
                    Value="27"/>
            <Setter Property="Cursor"
                    Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#3C3C3C" />
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#505050" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Styl dla MenuItem -->
        <Style TargetType="MenuItem">
            <Setter Property="Foreground"
                    Value="#E0E0E0" />
            <Setter Property="Width"
                    Value="150" />
            <Setter Property="Padding"
                    Value="10,6" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border x:Name="border"
                                Background="Transparent"
                                Padding="{TemplateBinding Padding}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0"
                                           Text="{TemplateBinding Header}"
                                           VerticalAlignment="Center" />

                                <TextBlock Grid.Column="1"
                                           Text="{TemplateBinding InputGestureText}"
                                           Foreground="#808080"
                                           Margin="20,0,0,0"
                                           VerticalAlignment="Center" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#094771" />
                            </Trigger>
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter Property="Foreground"
                                        Value="#666666" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>
    
    <Grid Margin="4 1 2 1"
          VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0"
              HorizontalAlignment="Left">
            <TextBlock Text="{Binding Tournament.Name}"
                       FontSize="16"
                       FontWeight="Thin"
                       Foreground="AntiqueWhite" />
        </Grid>

        <!-- Status Items -->
        <ItemsControl Grid.Column="1"
                      ItemsSource="{Binding StatusItems}"
                      FlowDirection="RightToLeft"
                      VerticalAlignment="Center">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button FlowDirection="LeftToRight"
                            Style="{StaticResource StatusButtonStyle}"
                            Command="{Binding ShowMenuCommand}"
                            CommandParameter="{Binding RelativeSource={RelativeSource Self}}"
                            ToolTipService.ShowDuration="99999"
                            ToolTipService.InitialShowDelay="200"
                            ToolTip="{Binding ToolTip}"
                            Margin="2,0">
                        <StackPanel Orientation="Horizontal">
                            <Grid>
                                <Image Source="{Binding CurrentImage}"
                                       Width="16"
                                       Height="16" />

                                <Border Visibility="{Binding BadgeVisibility, Converter={StaticResource BoolToVisibilityConverter}}"
                                        Width="13"
                                        Height="13"
                                        CornerRadius="6"
                                        Background="Red"
                                        Margin="11 0 0 10">
                                    <TextBlock Text="{Binding BadgeCount}"
                                               Foreground="White"
                                               FontSize="9"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontWeight="Bold" />
                                </Border>
                            </Grid>

                            <TextBlock Text="{Binding StatusText}"
                                       Foreground="#E0E0E0"
                                       FontSize="11"
                                       Margin="4 0 0 0"
                                       VerticalAlignment="Center"
                                       Visibility="{Binding ShowText, Converter={StaticResource BoolToVisibilityConverter}}" />
                        </StackPanel>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        
    </Grid>
</UserControl>
