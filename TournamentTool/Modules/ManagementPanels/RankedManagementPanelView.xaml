<UserControl x:Class="TournamentTool.Modules.ManagementPanels.RankedManagementPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TournamentTool.Modules.ManagementPanels"
             xmlns:i="clr-namespace:Microsoft.Xaml.Behaviors;assembly=Microsoft.Xaml.Behaviors"
             xmlns:models="clr-namespace:TournamentTool.Models"
             xmlns:components="clr-namespace:TournamentTool.Components.Buttons"
             xmlns:behaviors="clr-namespace:TournamentTool.Components.Behaviors"
             xmlns:viewmodels="clr-namespace:TournamentTool.ViewModels"
             xmlns:viewModelModels="clr-namespace:TournamentTool.ViewModels.Entities"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=local:RankedManagementPanel}"
             Margin="10 10 0 0">
    <StackPanel Orientation="Vertical" >

        <StackPanel Orientation="Horizontal"
                    Margin="0 0 0 4">
            <TextBlock Text="Custom text:"
                       Foreground="White"
                       Height="18"
                       FontSize="16"
                       Padding="0"
                       Margin="0 -6 0 0" />
            <TextBox TextWrapping="Wrap"
                     Width="110"
                     Height="20"
                     Text="{Binding CustomText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Background="#9E9E9E"
                     Margin="5 0 0 0" />
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Round:"
                       Foreground="White"
                       Height="18"
                       FontSize="16"
                       Padding="0"
                       Margin="0 -1 0 5" />
            <TextBox TextWrapping="Wrap"
                     Width="50"
                     Height="20"
                     Text="{Binding Rounds, Mode=TwoWay}"
                     PreviewTextInput="NumberValidationTextBox"
                     Background="#9E9E9E"
                     MaxLength="5"
                     Margin="5 0 0 0" />

            <components:ButtonNormal ContentText="-"
                                     FontSize="15"
                                     Width="30"
                                     Height="20"
                                     OnCommand="{Binding SubtractRoundCommand}"
                                     Margin="5 0 5 0" />

            <components:ButtonNormal ContentText="+"
                                     FontSize="15"
                                     Width="30"
                                     Height="20"
                                     OnCommand="{Binding AddRoundCommand}" />

        </StackPanel>

        <TextBlock Foreground="White"
                   Height="22"
                   FontSize="16">
                <Run Text="Players: " />
                <Run Text="{Binding Players, Mode=OneWay}" />
        </TextBlock>

        <TextBlock Foreground="White"
                   Height="22"
                   FontSize="16">
                <Run Text="Completions: " />
                <Run Text="{Binding Completions, Mode=OneWay}" />
        </TextBlock>

        <TextBlock Text="Started: "
                   Foreground="White"
                   FontSize="12" 
                   Margin="0 5 0 0">
            <Run Text="{Binding TimeStartedText}"/>
        </TextBlock>
        
        <TextBlock Text="Best Splits: "
                   Foreground="White"
                   FontWeight="SemiBold"
                   FontSize="18" 
                   Margin="0 0 0 0"/>

        <ListBox ScrollViewer.VerticalScrollBarVisibility="Auto"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 Background="Transparent"
                 BorderThickness="0"
                 IsHitTestVisible="False"
                 VerticalAlignment="Top"
                 HorizontalAlignment="Left"
                 VirtualizingPanel.IsVirtualizing="True"
                 VirtualizingPanel.VirtualizationMode="Recycling"
                 ItemsSource="{Binding BestSplits}">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="viewModelModels:RankedBestSplitViewModel">
                    <StackPanel Orientation="Vertical"
                                Width="220"
                                Margin="-1 0 0 2">
                        <TextBlock Text="{Binding TypeName, Mode=OneTime}"
                                   Foreground="Wheat"
                                   FontWeight="Bold" />
                        
                        <ItemsControl ItemsSource="{Binding Splits}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type viewModelModels:RankedBestSplitDataViewModel}">
                                    <TextBlock Foreground="White">
                                        <Run Text="{Binding TimeText, Mode=OneTime}"
                                             Foreground="LightGray"
                                             FontWeight="SemiBold" />
                                        <Run Text="{Binding TimeDifferenceText, Mode=OneTime}"
                                             Foreground="#d43f3f"
                                             FontWeight="SemiBold" />
                                        <Run Text="-" />
                                        <Run Text="{Binding PlayerName, Mode=OneTime}" />
                                    </TextBlock>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Margin"
                            Value="0" />
                    <Setter Property="Padding"
                            Value="0" />
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
    </StackPanel>
</UserControl>
